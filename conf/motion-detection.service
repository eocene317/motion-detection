# vim: ft=systemd
[Unit]
Description=Motion Detection System
After=dev-video0.device
BindsTo=dev-video0.device

[Service]
User=alarm
Group=alarm
Environment=MOTION_HOME=/path/to/motion-detection
Environment=PYTHONPATH=${MOTION_HOME}
Environment=PYTHONUNBUFFERED=1
WorkingDirectory=/path/to/media
ExecStart=${MOTION_HOME}/bin/motion --fps 10 --size 800x448
Restart=on-failure

[Install]
WantedBy=dev-video0.device
